{
  "name": "@high/package-example",
  "version": "0.5.0",
  "author": "Manuel Vila <mvila@3base.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/hightools/high"
  },
  "commands": {
    "deploy": ["babel transpile", "rollup --verbose"],
    "info": {
      "target": "pkg info",
      "aliases": "i"
    },
    "run": "./dist/commands/run --hello"
  },
  "config": {
    "verbose": true
  },
  "defaultCommand": "info",
  "tools": {
    "@high/package": {
      "version": "^0.6.0",
      "hooks": {
        "before:publish": "./build"
      }
    }
  }
}
