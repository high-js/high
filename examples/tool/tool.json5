{
  name: 'tool-example',
  version: '0.1.0',
  author: 'Manuel Vila <mvila@3base.com>',
  license: 'MIT',
  repository: {
    type: 'git',
    url: 'git://github.com/hightools/high'
  },
  commands: {
    deploy: ['babel transpile', 'rollup --verbose'],
    info: {
      run: 'pkg info',
      alias: 'i'
    },
    hello: {
      alias: 'hi',
      run: './commands/hello $1',
      arguments: {
        name: 'World'
      },
      config: {
        color: 'white'
      }
    },
    'green-hello': {
      run: 'hello $1',
      config: {
        color: 'green'
      }
    }
  },
  defaultCommand: 'hello',
  config: {
    verbose: true
  },
  runtime: {
    name: 'node',
    version: '>=4.3.2'
  }
}
