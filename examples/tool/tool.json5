  repository: {
    type: 'git',
    url: 'git://github.com/runtools/run'
  },
  commands: {
    // 'deploy': 'babel transpile, rollup --verbose',
    // info: {
    //   run: 'pkg info',
    //   aliases: 'i'
    // },
    'hello': {
      aliases: ['hi'],
      file: './commands/hello',
      arguments: {
        name: 'World'
      },
      config: {
        color: 'white'
      }
    },
    'run-hello': {
      run: 'hello, hello $0 --color=${config.color}',
      arguments: {
        name: 'Forest'
      },
      config: {
        color: 'blue'
      }
    }
  },
  config: {
    verbose: true
  },
  runtime: {
    name: 'node',
    version: '>=4.3.2'
  }
}
