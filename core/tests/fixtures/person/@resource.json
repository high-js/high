{
  "@name": "person",
  "@version": "1.0.0",
  "@export": {
    "@implementation": "./",
    "@runtime": "node@>=6.10.0",
    "name": {"@type": "string"},
    "age": {"@type": "number"},
    "@options": {"shout": false},
    "formatGreetingMethod": {
      "@type": "method",
      "@parameters": ["Hello"]
    },
    "formatGreetingCommand": {
      "@type": "command",
      "@options": {"ageLimit": {"@alias": "limit", "@value": 45}}
    },
    "formatGreetingMacro": {
      "@type": "macro",
      "@options": {"ageLimit": {"@alias": "limit", "@value": 30}},
      "@expression": "formatGreetingCommand --ageLimit=${@options.ageLimit}"
    },
    "formatWordsMethod": {
      "@type": "method",
      "@parameters": [{"@type": "string"}],
      "@variadic": true
    },
    "formatWordsCommand": {
      "@type": "command",
      "@parameters": [{"@type": "string"}],
      "@variadic": true,
      "@options": {"capitalize": true}
    },
    "formatWordsMacro": {
      "@type": "macro",
      "@parameters": [{"@name": "word", "@type": "string"}],
      "@variadic": true,
      "@options": {"capitalize": true},
      "@expression": "formatWordsCommand ${@arguments[0]} --capitalize=${@options.capitalize}"
    },
    "address": {
      "@implementation": "./address",
      "city": {"@type": "string"},
      "country": {"@type": "string"}
    },
    "hasBeenBuilt": false,
    "build": {
      "@type": "method",
      "@listen": "before:publish"
    },
    "publish": {
      "@type": "method",
      "@emit": "*:publish"
    }
  }
}
