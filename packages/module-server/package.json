{
  "name": "@voila/module-server",
  "version": "0.2.1",
  "description": "Voila Module server",
  "author": "Manuel Vila <mvila@3base.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/voilajs/voila"
  },
  "scripts": {
    "bundle": "npm run transpile && rollup --config",
    "lint": "eslint src",
    "prepublish": "npm run transpile",
    "transpile": "babel src --out-dir dist"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          },
          "loose": true,
          "exclude": [
            "transform-regenerator"
          ]
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-next"
  },
  "dependencies": {
    "babel-cli": "^6.22.2",
    "easy-json-rpc": "^2.0.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-preset-env": "^1.1.8",
    "eslint": "^3.14.1",
    "eslint-config-next": "^0.1.15",
    "rollup": "^0.41.4",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0"
  }
}
